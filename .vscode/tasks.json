{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "detail": "with .NET Hot Reload",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "isBackground": true,
            "args": [
                "watch",
                "run"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src",
                "env": {
                    "SMTP_MAIL": "hello@world.com",
                    "SMTP_HOST": "smtp@world.com",
                    "SMTP_USERNAME": "hello",
                    "SMTP_PASSWORD": "world"
                }
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                },
                "background": {
                    "beginsPattern": "^dotnet watch",
                    "endsPattern": "(dotnet watch ðŸš€ Started|dotnet watch âŒš No hot reload changes to apply.|dotnet watch ðŸ”¥ Hot reload of changes succeeded.)"
                }
            }
        }
    ]
}